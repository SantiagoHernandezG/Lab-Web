extends layout

block content
    main
        .container-contact100
            .wrap-contact100
                .contact100-form.validate-form
                    span.contact100-form-title
                        | Verifique su registro
                    .wrap-input100.validate-input(data-validate='Name is required')
                        span.label-input100 Código Personal
                        input#codigo.input100(type='text' name='name' placeholder='Ingresa tu código personal')
                        span.focus-input100
                    .container-contact100-form-btn
                        .wrap-contact100-form-btn
                            .contact100-form-bgbtn
                            button.contact100-form-btn(onclick='checkTicket()')
                                span
                                    | Ver mi boleto
                                    i.fa.fa-long-arrow-right.m-l-7(aria-hidden='true')
                    .container-contact100-form-btn
                        .wrap-contact100-form-btn
                            .contact100-form-bgbtn
                            button.contact100-form-btn
                                span
                                    a(href='/dashboard') Ver dashboard
                                    i.fa.fa-long-arrow-right.m-l-7(aria-hidden='true')
                    #form-alert.alert.alert-primary(role='alert').alert-hidden
                        | Ingrese un código válido

            #data-form.default-hidden
                .wrap-contact100
                    form.contact100-form.validate-form
                        span.contact100-form-title
                            | Ingrese sus datos
                        .wrap-input100.validate-input(data-validate='Name is required')
                            span.label-input100 Nombre
                            input.input100(type='text' name='name' placeholder='Ingresa tu nombre')
                            span.focus-input100
                        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
                            span.label-input100 Correo electrónico
                            input.input100(type='text' name='email' placeholder='Ingresa tu correo electrónico')
                            span.focus-input100
                        .wrap-input100.validate-input(data-validate='Message is required')
                            span.label-input100 Teléfono Móvil
                            input.input100(type='text' name='email' placeholder='Ingresa tu número de celular')
                            span.focus-input100
                        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
                            span.label-input100 Código Personal
                            input.input100(type='text' name='email' placeholder='Ingresa tú código personal')
                            span.focus-input100
                        .container-contact100-form-btn
                            .wrap-contact100-form-btn
                                .contact100-form-bgbtn
                                button.contact100-form-btn
                                    span
                                        | Ver mi boleto
                                        i.fa.fa-long-arrow-right.m-l-7(aria-hidden='true')